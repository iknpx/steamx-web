@import '~@style/variables'
@import '~@style/mixins/media'

geometry()
	height calc(100vh - 100px)
	width 100vw

.container
	geometry()
	background-image url('@assets/images/maxresdefault.jpg')

.overlay
	geometry()
	background-color rgba(45, 45, 45, .7)
	display flex
	flex-direction column
	align-items center
	justify-content center
	position fixed
	overflow scroll

.metadata
	position fixed
	bottom 15px
	left 15px
	display flex
	flex-direction column
	color #656565

	&-title
		font-size 18px


+media-mobile()
	.metadata
		display none
