@import '~s-grid/s-grid-settings'
@import '~s-grid/s-grid-functions'

.container
	width 100%
	display flex
	flex-direction column
	align-items center

.top
	background-color #c3f
	width 100%
	height 260px
	box-shadow 0 2px 4px 0 rgba(0, 0, 0, .5)
	background url('@assets/images/hero.jpg') center no-repeat
	background-size cover

	&-actions
		display flex
		justify-content space-between
		align-items center

	&-game
		color #fff
		display flex
		flex-direction column
		font-family 'Helvetica', 'Helvetica Neue', 'Roboto', sans-serif
		height 130px
		font-weight 300

		&-title
			font-size 16px
			color #929292
			margin 25px 0 2px

		&-name
			font-size 36px
			line-height 40px

		&-description
			width 80%
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			font-size 16px

.actions
	display flex
	align-items center
	height 60px

.players
	display flex

.overlay
	width 100%
	height 260px
	background-color rgba(45, 45, 45, .7)
	display flex
	flex-direction column
	align-items center

.placeholder
	font-size 24px
	color #999
