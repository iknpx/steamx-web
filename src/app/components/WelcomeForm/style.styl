@import '~@style/mixins/animate'
@import '~@style/variables'
@import '~@style/mixins/media'

.container
	fadeIn(.3s)

	display flex
	flex-direction column
	align-items center
	height 200px
	position relative
	top -100px

.button
	width 140px

.title
	font-size 36px
	color #fff

.text
	font-size 18px
	color #bdbdbd
	margin-bottom 30px

+media-mobile()
	.container
		top 0
