.container
	width 100%
	background-color #242629
	justify-content center
	display flex
	height 100px

.row
	display flex
	justify-content space-between
	width 100%
	height 100%
	align-items center

.name
	color #fff
	font-size 24px

.navigation
	display flex
	justify-content flex-end

.link
	text-decoration none
	color #acacac
	transition color .1s ease

	&:not(:first-child)
		margin-left 25px

	&:hover
		color #dedede

.active
	color #fff
