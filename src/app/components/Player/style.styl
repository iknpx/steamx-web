.container
	position relative
	display flex
	flex-direction column
	align-items center

	&:not(:last-child)
		margin-right 25px

.icon
	border-radius 50%
	width 70px
	height 70px
	margin-bottom 6px
	border 2px solid #e1e1e1

.name
	font-size 12px
	color #fff

.remove
	background-color #fff
	width 18px
	height 18px
	border-radius 50%
	padding 3px
	position absolute
	top 0
	right 0
	cursor pointer
